{
	"name": "css-action",
	"private": false,
	"displayName": "Code Actions For Css",
	"description": "A vscode extension help editing scss/less file with color replace and px convert.",
	"version": "0.2.3",
	"publisher": "kikyous",
	"repository": {
		"type": "git",
		"url": "https://github.com/kikyous/vscode-css-action"
	},
	"bugs": {
		"url": "https://github.com/kikyous/vscode-css-action/issues"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"contributes": {
		"configuration": {
		  "title": "Css Action",
		  "properties": {
			"cssAction.colorVariablesFile": {
			  "type": "string",
			  "description": "color variables file path."
			},
			"cssAction.pxSearchRegex": {
				"type": "string",
				"description": "px search regex.",
				"default": "(\\d+px\\s*)+(?![^(]*\\))"
			},
			"cssAction.rootFontSize": {
				"type": "integer",
				"description": "root font size for rem calc.",
				"default": 16
			  },
			"cssAction.pxReplaceOptions": {
				"type": "array",
				"description": "px replace options, '_AUTO_CALC_' for auto calc.",
				"default": ["px2rem($&)", "_AUTO_CALC_"]
			}
		  }
		}
	  },
	"activationEvents": [
		"onLanguage:scss", "onLanguage:less" , "onLanguage:vue"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^3.9.4",
		"@types/vscode": "^1.32.0"
	}
}
